# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/lc-class-crew
MONGODB_TEST_URI=mongodb://localhost:27017/lc-class-crew-test

# MongoDB Atlas Example (uncomment and use for production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lc-class-crew?retryWrites=true&w=majority

# ============================================
# JWT CONFIGURATION
# ============================================
# IMPORTANT: Change these secrets in production!
# Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-random-64-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production-use-random-64-chars
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ============================================
# RATE LIMITING
# ============================================
# Time window in milliseconds (default: 15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
# Maximum file size in bytes (default: 5MB = 5242880 bytes)
MAX_FILE_SIZE=5242880
# Upload directory (relative to project root)
UPLOAD_DIR=uploads
# Allowed file types (comma-separated MIME types)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp,application/pdf

# ============================================
# STORAGE CONFIGURATION
# ============================================
# Storage type: 'local' or 's3'
STORAGE_TYPE=local

# AWS S3 Configuration (only needed if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ============================================
# ADMIN DEFAULT CREDENTIALS
# ============================================
# Used for initial admin account creation
# CHANGE THESE IMMEDIATELY AFTER FIRST LOGIN!
ADMIN_EMAIL=admin@lcclasscrew.com
ADMIN_PASSWORD=changeme123
ADMIN_NAME=System Administrator

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# SMTP Server Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@lcclasscrew.com
EMAIL_FROM_NAME=LC Class Crew

# Gmail App Password: https://myaccount.google.com/apppasswords

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log levels: 'error', 'warn', 'info', 'debug', 'trace'
LOG_LEVEL=info

# ============================================
# FRONTEND URL
# ============================================
# Used for email links, redirects, etc.
FRONTEND_URL=http://localhost:3000

# ============================================
# PAYMENT GATEWAY (Optional)
# ============================================
# Stripe Configuration
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal Configuration
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ============================================
# THIRD-PARTY SERVICES (Optional)
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# Cloudinary (Image Hosting)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================
# REDIS CONFIGURATION (Optional)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# SECURITY
# ============================================
# Enable HTTPS redirect in production
FORCE_HTTPS=false
COOKIE_SECURE=false

# ============================================
# FEATURES FLAGS
# ============================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false

# ============================================
# MISC
# ============================================
TZ=UTC
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# ============================================
# NOTES
# ============================================
# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env file to version control
# 3. Generate strong secrets for production
# 4. Keep this file updated when adding new environment variables
