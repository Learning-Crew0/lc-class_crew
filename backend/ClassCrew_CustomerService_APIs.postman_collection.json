          "name": "Submit Class Application (Public)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data._id) {",
                  "        pm.collectionVariables.set('applicationId', response.data._id);",
                  "        console.log('Application ID saved:', response.data._id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"applicantName\": \"Hong Gildong\",\n  \"email\": \"hong@example.com\",\n  \"phone\": \"01012345678\",\n  \"organization\": \"Samsung Electronics\",\n  \"memberType\": \"employee\",\n  \"courseId\": \"{{courseId}}\",\n  \"scheduleId\": \"{{scheduleId}}\",\n  \"numberOfParticipants\": 1,\n  \"applicationPurpose\": \"Career development and skill enhancement\",\n  \"specialRequests\": \"Prefer morning sessions\",\n  \"expectedPaymentMethod\": \"card_payment\",\n  \"paymentType\": \"personal\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/class-applications",
              "host": ["{{baseUrl}}"],
              "path": ["class-applications"]
            },
            "description": "Submit a new class application (no authentication required)"
          }
        },
