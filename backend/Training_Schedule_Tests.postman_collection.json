          "name": "Step 3: Get Courses (Copy courseId)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/courses",
              "host": ["{{baseUrl}}"],
              "path": ["courses"]
            },
            "description": "Copy a courseId from response"
          },
          "response": []
