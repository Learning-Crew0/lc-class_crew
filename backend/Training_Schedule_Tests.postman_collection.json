    {
      "name": "üõí Cart Flow (User)",
      "item": [
        {
          "name": "1. Get Available Schedules",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/courses/{{courseId}}/training-schedules",
              "host": ["{{baseUrl}}"],
              "path": ["courses", "{{courseId}}", "training-schedules"]
            },
            "description": "User views available schedules in dropdown"
          },
          "response": []
        },
        {
          "name": "2. Add Course to Cart (with Schedule)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"itemType\": \"course\",\n  \"productId\": \"{{courseId}}\",\n  \"courseSchedule\": \"{{scheduleId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/add",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "add"]
            },
            "description": "‚ö†Ô∏è IMPORTANT: Must provide scheduleId from step 1"
          },
          "response": []
        },
        {
          "name": "3. View Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart",
              "host": ["{{baseUrl}}"],
              "path": ["cart"]
            },
            "description": "View cart with course and selected schedule"
          },
          "response": []
        },
        {
          "name": "4. Get Courses from Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"selectedProductIds\": [\"{{courseId}}\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/get-selected-courses",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "get-selected-courses"]
            },
            "description": "Get selected courses for class application"
          },
          "response": []
